#!/usr/bin/python3.4

import pygame

########## DEFINE ZONE ##########

## Define screen size
LARGEUR = 700
HAUTEUR = 500

## Define some colors
BLACK    = (   0,   0,   0)
WHITE    = ( 255, 255, 255)
BLUE     = (   0,   0, 255)
GREEN    = (   0, 255,   0)
RED      = ( 255,   0,   0)

JUMP = 0
C = 0

## Define loop status
done = False

class Player(pygame.sprite.Sprite):
    """ This class represents the block. """
    def __init__(self, skin):
        # Call the parent class (Sprite) constructor
        super().__init__()
        
        if skin == "male" :
            self.image = pygame.image.load("PNG/Players/bunny1_ready.png").convert()
            self.image.set_colorkey(BLACK)
        elif skin == "femal" :
            self.image = pygame.image.load("PNG/Players/bunny2_ready.png").convert()
            self.image.set_colorkey(BLACK)
        
        self.rect = self.image.get_rect()
        
        self.jump = 0
        self.speed = 0
        self.rect.y = HAUTEUR - 32 - 191
        self.rect.x = 32 

########## INIT ZONE ##########

## Init pygame
pygame.init()

## Set window's size and open window
screen = pygame.display.set_mode((LARGEUR, HAUTEUR))

## Set window's name
pygame.display.set_caption("My first window !!")

## Init clock
clock = pygame.time.Clock()

all_sprites_list = pygame.sprite.Group()

player = Player("male")
all_sprites_list.add(player)

########## LOOP ZONE ##########

## Start loop
while not done :
    
    ########## EVENT ZONE ##########

    ## For every events, filter event and refresh screen
    for event in pygame.event.get() :

        ## Filter events
        if event.type == pygame.QUIT :
            done = True
        elif event.type == pygame.KEYDOWN :
            if event.key == pygame.K_RIGHT :
                player.speed = 1
            elif event.key == pygame.K_LEFT :
                player.speed = -1
            elif event.key == pygame.K_SPACE :
                JUMP = 1

        elif event.type == pygame.KEYUP : 
            if (event.key == pygame.K_RIGHT) or (event.key == pygame.K_LEFT) :
                player.speed = 0
            #elif event.key == pygame.K_SPACE :
            #    player.jump = 0



    ########## LOGIC CODE ZONE ##########

    if (JUMP == 1) and (C < 10) :
        player.rect.y = player.rect.y - C
        print(C)
        C += 1
    elif (JUMP == 0) and (C > 0) :
        C -= 1
        player.rect.y += C
        print("2 : "+ str(C))
    else :
        JUMP = 0

    player.rect.x += player.speed

    ########## CLEAR SCREEN ZONE ##########

    ## Set the entier screnn to white
    screen.fill(BLACK)


    ########## DRAWING CODE ZONE ##########
    
    all_sprites_list.draw(screen)

    ########## REFRESH SCREEN ZONE ##########

    ## Refresh screen
    pygame.display.flip()

    ## Set max framerate
    clock.tick(60)



























